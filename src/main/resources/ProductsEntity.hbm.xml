<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.test.model.ProductsEntity" table="products" schema="coffeeshopdb">
        <id name="productId">
            <column name="ProductID" sql-type="int(11)"/>
        </id>
        <property name="productName">
            <column name="Product Name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="unitPrice">
            <column name="UnitPrice" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>